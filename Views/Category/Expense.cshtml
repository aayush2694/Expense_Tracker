@model Project_Expense_Tracker.context.expense
@{
    ViewBag.Title = "Expense";
}

<h2>Expense</h2>

@using (Html.BeginForm("AddExpense", "Category", FormMethod.Post))
    {
        <div class=" container">
            <div class="form-group">
                <label>Expense Title</label>
                @Html.TextBoxFor(x => x.EXPENSE_TITLE, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Expense Amount</label>
                @Html.TextBoxFor(x => x.EXPENSE_AMOUNT, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Category</label>
                @Html.DropDownList("CAT_id", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Discription</label>
                @Html.TextAreaFor(x => x.DISCRIPTION, new { @class = "form-control", @rows = "5" })
            </div>

            <div class="form-group">
               <label>Date and Time</label>
                @Html.TextBox("Date", DateTime.Now, new {@disabled = "disabled", @class = "form-control"})
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-primary">Cancel</button>
            </div>




        </div>
    }


